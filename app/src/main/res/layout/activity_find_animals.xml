<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pnlMainLinearLayoutFindAnimals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tblRow0FindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLevelFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:text="Level"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtCorrectAnswerFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="Correct Answer"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtTimerFindAnimals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:gravity="right"
            android:text="Timer"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tblRow1FindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumberOfLevelFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="1"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imgViewCheck0FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/ic_launcher_incheck_trans" />

        <ImageView
            android:id="@+id/imgViewCheck1FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_incheck_trans" />

        <ImageView
            android:id="@+id/imgViewCheck2FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_incheck_trans" />

        <TextView
            android:id="@+id/txtNumberOfTimerFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="00"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tblRow2FindAnimals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuestionFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutVerticalFindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tblLayoutFindAnimals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

            </TableLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
