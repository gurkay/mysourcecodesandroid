<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pnlMainLinearLayoutFindAnimals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tblRow0FindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLevelFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txtCorrectAnswerFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answer"
            android:gravity="center"
            android:layout_marginLeft="45dp"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txtTimerFindAnimals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:gravity="right"
            android:layout_marginRight="2dp"
            android:textSize="25sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tblRow1FindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtNumberOfLevelFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="50dp"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/imgViewCheck0FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_check_trans"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/imgViewinCheck0FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_incheck_trans"/>

        <ImageView
            android:id="@+id/imgViewCheck1FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_check_trans"/>

        <TextView
            android:id="@+id/txtNumberOfTimerFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="80dp"
            android:textSize="25sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tblRow2FindAnimals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtQuestionFindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textSize="25sp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrViewFindAnimals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/tblRow3FindAnimals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shrinkColumns="*">
            <TableRow
                android:id="@+id/tblRow3FirstRowFindAnimals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TableRow>
            <TableRow
                android:id="@+id/tblRow3SecondRowFindAnimals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TableRow>
            <TableRow
                android:id="@+id/tblRow3ThreeRowFindAnimals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TableRow>
            <TableRow
                android:id="@+id/tblRow3FourRowFindAnimals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>
